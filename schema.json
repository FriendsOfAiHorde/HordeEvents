{
  "type": "array",
  "items": {
    "required": ["title", "id", "validSince", "validUntil"],
    "additionalProperties": false,
    "properties": {
      "title": {
        "type": "string"
      },
      "id": {
        "type": "string",
        "pattern": "^[0-9a-f]{8}\\b-[0-9a-f]{4}\\b-[0-9a-f]{4}\\b-[0-9a-f]{4}\\b-[0-9a-f]{12}$",
        "format": "uuid"
      },
      "validSince": {
        "type": "string",
        "format": "datetime",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(?:Z|\\+[0-9]{2}:?[0-9]{2})"
      },
      "validUntil": {
        "type": "string",
        "format": "datetime",
        "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}T[0-9]{2}:[0-9]{2}:[0-9]{2}(?:Z|\\+[0-9]{2}:?[0-9]{2})"
      },
      "description": {
        "type": "string"
      },
      "limitedTo": {
        "type": "array",
        "description": "List of arbitrary subscriber identifiers, you can filter based on it.",
        "items": {
          "type": "string"
        }
      },
      "channels": {
        "type": "array",
        "description": "Any channel this message is related to",
        "items": {
          "type": "string",
          "enum": ["frontend-news", "marketing", "horde-news", "parties"]
        }
      },
      "link": {
        "type": "string"
      }
    }
  }
}
